<div class='container'>
  <div class='row'>
    <div class='col-md-3'>

      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      
      <h2>New book</h2>
      <%= render 'books/form', book: Book.new %>
      
    </div>
      
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      
      <table class="table">
        <thead>
          <td><%= image_tag @book.user.get_profile_image(100, 100) %><br>
          <%= @book.user.name %></td>
          
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
        </thead>
      </table>


    </div>
  </div>
</div>